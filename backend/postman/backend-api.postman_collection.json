                "exec": [
                  "pm.test(\"Status 200\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "pm.test(\"Salva nodeId\", function () {",
                  "  var json = pm.response.json();",
                  "  var nodes = (json.graph && json.graph.nodes) ? json.graph.nodes : [];",
                  "  pm.expect(nodes.length).to.be.above(0);",
                  "  var created = nodes[nodes.length - 1];",
                  "  pm.collectionVariables.set(\"nodeId\", created.id);",
                  "});"
